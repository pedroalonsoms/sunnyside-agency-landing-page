---
import Navbar from "../components/Navbar.astro";
import IconArrowDown from "../components/svgs/IconArrowDown.astro";
import IconFacebook from "../components/svgs/IconFacebook.astro";
import IconInstagram from "../components/svgs/IconInstagram.astro";
import IconPinterest from "../components/svgs/IconPinterest.astro";
import IconTwitter from "../components/svgs/IconTwitter.astro";
import Logo from "../components/svgs/Logo.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={title} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600&family=Fraunces:wght@400;700;900&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Barlow:wght@600&family=Fraunces:wght@700;900&display=swap"
      />
    </noscript>

    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="images/favicon-32x32.webp"
    />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="relative z-0">
        <Navbar isBackgroundTransparent={true} />

        <picture>
          <source
            srcset="images/desktop/image-header.webp"
            width="2880"
            height="1600"
            type="image/webp"
            media="(min-width: 425px)"
          />
          <img
            src="images/mobile/image-header.webp"
            width="750"
            height="1076"
            alt=""
            class="absolute top-0 left-0 -z-10 h-full w-full object-cover object-bottom"
          />
        </picture>
        <h1
          class="mt-12 break-all text-center font-fraunces text-4xl font-semibold uppercase tracking-widest text-my-neutral-100 sm:mt-24 sm:text-6xl"
        >
          We are creatives
        </h1>
        <div class="mt-12 pb-32 sm:mt-28 sm:pb-80">
          <IconArrowDown class="mx-auto text-my-neutral-100" />
        </div>
      </div>
    </header>
  </body>

  <main>
    <slot />
  </main>

  <footer>
    <div class="bg-my-green-200 px-6">
      <div class="pt-16">
        <Logo class="mx-auto h-8 w-auto text-my-green-600 opacity-90" />
      </div>

      <nav class="mt-8 flex flex-wrap justify-center gap-12">
        <a
          href="#"
          class="text-lg font-semibold text-my-green-300 hover:text-my-neutral-100"
        >
          About
        </a>
        <a
          href="#"
          class="text-lg font-semibold text-my-green-300 hover:text-my-neutral-100"
        >
          Services
        </a>
        <a
          href="#"
          class="text-lg font-semibold text-my-green-300 hover:text-my-neutral-100"
        >
          Projects
        </a>
      </nav>

      <nav class="mt-20 flex justify-center gap-8">
        <a href="#">
          <IconFacebook class="text-my-green-600 hover:text-my-neutral-100" />
        </a>
        <a href="#">
          <IconInstagram class="text-my-green-600 hover:text-my-neutral-100" />
        </a>
        <a href="#">
          <IconTwitter class="text-my-green-600 hover:text-my-neutral-100" />
        </a>
        <a href="#">
          <IconPinterest class="text-my-green-600 hover:text-my-neutral-100" />
        </a>
      </nav>

      <p
        class="mt-16 pb-16 text-center text-sm font-semibold text-my-green-300"
      >
        Challenge by
        <a
          href="https://www.frontendmentor.io?ref=challenge"
          target="_blank"
          class="text-my-green-600 hover:text-my-neutral-100"
        >
          Frontend Mentor.
        </a>
        Coded by <a href="#">Pedro Alonso Moreno Salcedo</a>.
      </p>
    </div>
  </footer>
</html>

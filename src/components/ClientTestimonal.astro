---
export interface Props {
  body: string;
  personName: string;
  personTitle: string;
  imgSrc: string;
}

const { body, personName, personTitle, imgSrc } = Astro.props;
---

<div>
  <img
    src={imgSrc}
    alt=""
    width="144"
    height="144"
    class="mx-auto h-20 w-20 rounded-full"
  />
  <p
    class="mt-8 text-center text-lg font-semibold text-my-neutral-400 sm:mt-14"
  >
    {body}
  </p>
  <p class="mt-6 text-center font-fraunces text-lg font-bold sm:mt-16">
    {personName}
  </p>
  <p class="mt-2 text-center text-sm font-bold text-my-neutral-200">
    {personTitle}
  </p>
</div>

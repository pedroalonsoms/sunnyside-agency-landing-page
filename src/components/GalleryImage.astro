---
export interface Props {
  mobileImgSrc: string;
  desktopImgSrc: string;
}

const { mobileImgSrc, desktopImgSrc } = Astro.props;
---

<picture>
  <source
    srcset={`${desktopImgSrc}`}
    type="image/webp"
    media="(min-width: 720px)"
  />
  <img
    src={mobileImgSrc}
    alt=""
    width="376"
    height="376"
    class="h-full w-full object-cover"
  />
</picture>
